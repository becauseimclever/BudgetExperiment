@inherits LayoutComponentBase

<div class="page">
    <header>
        <nav class="navbar">
            <a href="/" class="nav-brand">Budget Experiment</a>
            <div class="nav-links">
                <a href="/calendar">📅 Calendar</a>
                <a href="/accounts">🏦 Accounts</a>
            </div>
        </nav>
    </header>

    <main>
        @Body
    </main>
</div>

<style>
    .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 30px;
        background: #343a40;
        color: white;
    }

    .nav-brand {
        font-size: 1.5em;
        font-weight: bold;
        color: white;
        text-decoration: none;
    }

    .nav-brand:hover {
        color: #f8f9fa;
    }

    .nav-links {
        display: flex;
        gap: 20px;
    }

    .nav-links a {
        color: #f8f9fa;
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 4px;
        transition: background 0.2s;
    }

    .nav-links a:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    main {
        flex: 1;
        background: #f8f9fa;
        padding: 20px;
    }
</style>
