@page "/"

@inject NavigationManager Navigation

<PageTitle>Budget Experiment</PageTitle>

<div class="home-container">
    <h1>Budget Experiment</h1>
    <p class="tagline">A calendar-centric approach to personal finance tracking.</p>

    <div class="quick-actions">
        <div class="action-card" @onclick='() => Navigation.NavigateTo("/calendar")'>
            <h3>üìÖ Calendar</h3>
            <p>View your transactions by date</p>
        </div>
        <div class="action-card" @onclick='() => Navigation.NavigateTo("/accounts")'>
            <h3>üè¶ Accounts</h3>
            <p>Manage your accounts</p>
        </div>
    </div>
</div>

<style>
    .home-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
    }

    .tagline {
        color: #666;
        font-size: 1.2em;
        margin-bottom: 40px;
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        justify-content: center;
    }

    .action-card {
        background: white;
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 30px;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .action-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .action-card h3 {
        margin: 0 0 10px 0;
        font-size: 1.5em;
    }

    .action-card p {
        margin: 0;
        color: #666;
    }
</style>
