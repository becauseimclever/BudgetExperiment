{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_WARNING": "DO NOT store real secrets here. Use User Secrets (dev) or Environment Variables (production). See copilot-instructions.md section 17.",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authentik": {
      "_comment": "Configure via user-secrets or env vars. Never commit real Authority/Audience values.",
      "Authority": "",
      "Audience": "",
      "RequireHttpsMetadata": true,
      "Enabled": false
    }
  },
  "Database": {
    "AutoMigrate": true,
    "MigrationTimeoutSeconds": 300
  },
  "CsvImportDeduplication": {
    "FuzzyDateWindowDays": 3,
    "MaxLevenshteinDistance": 5,
    "MinJaccardSimilarity": 0.6
  }
}
