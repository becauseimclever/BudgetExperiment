{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_WARNING": "DO NOT store real secrets here. Use User Secrets for local development. See copilot-instructions.md section 17.",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Authentik": {
      "_comment": "Configure via: dotnet user-secrets set 'Authentication:Authentik:Authority' 'https://...' ",
      "Authority": "",
      "Audience": "",
      "RequireHttpsMetadata": false,
      "Enabled": false
    }
  },
  "Database": {
    "AutoMigrate": true,
    "MigrationTimeoutSeconds": 300
  },
  "CsvImportDeduplication": {
    "FuzzyDateWindowDays": 3,
    "MaxLevenshteinDistance": 5,
    "MinJaccardSimilarity": 0.6
  }
}
